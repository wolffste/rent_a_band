<%= simple_form_for (@band) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.collection_check_boxes :availability, [[true, 'Yes'], [false, 'No']], :first, :last %>
  <%= f.input :fee %>
  <%= f.association :genre, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
  <%= f.association :category, input_html: { class: "beautiful-dropdown" }, include_hidden: false %>
  <%= f.submit %>
<% end %>
