<%= simple_form_for (@band) do |f| %>
  <%= f.input :name, class: "form-group" %>
  <%= f.input :description, class: "form-group"  %>
  <%= f.collection_check_boxes :availability, [[true, 'Yes'], [false, 'No']], :first, :last %>
  <%= f.input :fee, class: "form-group"  %>
  <%= f.association :genre, input_html: { class: "beautiful-dropdown" }, include_hidden: false, class: "form-group"  %>
  <%= f.association :category, input_html: { class: "beautiful-dropdown" }, include_hidden: false, class: "form-group"  %>
  <%= f.input :photo, as: :file  %>
  <%= f.submit %>
<% end %>
